{
  "name": "colorwerkz",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "type": "module",
  "scripts": {
    "i": "npm install",
    "dev:api": "npm --workspace apps/api run dev",
    "dev:python": "cd services/python-service && . .venv/bin/activate && uvicorn app.main:app --reload --host 0.0.0.0 --port 8001 --app-dir app",
    "dev:web": "npm --workspace apps/web run dev",
    "dev:all": "concurrently -n py,api,web \"npm run dev:python\" \"npm run dev:api\" \"npm run dev:web\""
  },
  "devDependencies": {
    "concurrently": "^9.1.2"
  },
  "dependencies": {
    "tailwindcss-animate": "^1.0.7"
  }
}
