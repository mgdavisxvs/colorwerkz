{
  "name": "colorwerkz",
  "version": "2.0.0",
  "description": "Enterprise color combination system with AI-powered image processing",
  "main": "dist/server/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only server/index.ts",
    "build": "tsc",
    "start": "node dist/server/index.js",
    "lint": "eslint 'server/**/*.ts' 'tests/**/*.ts'",
    "lint:fix": "eslint 'server/**/*.ts' 'tests/**/*.ts' --fix",
    "type-check": "tsc --noEmit",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "mocha --require ts-node/register 'tests/unit/**/*.test.ts'",
    "test:integration": "mocha --require ts-node/register 'tests/integration/**/*.test.ts' --timeout 30000",
    "test:watch": "mocha --require ts-node/register 'tests/**/*.test.ts' --watch",
    "test:coverage": "nyc npm test",
    "deploy:staging": "npm run build && NODE_ENV=staging pm2 restart ecosystem.config.js --env staging",
    "deploy:production": "npm run build && NODE_ENV=production pm2 restart ecosystem.config.js --env production",
    "db:migrate": "psql $DATABASE_URL -f IMPLEMENTATION_2_COMPOSITE_INDEXES.sql",
    "db:backup": "pg_dump $DATABASE_URL > backups/backup-$(date +%Y%m%d-%H%M%S).sql",
    "fix:pseudolabels": "git apply server/patches/pseudolabel_fix.patch",
    "verify:pseudolabels": "python3 scripts/verify_pseudolabel_fix.py",
    "clean": "rm -rf dist coverage .nyc_output",
    "clean:uploads": "find /tmp/colorwerkz/uploads -type f -mtime +1 -delete"
  },
  "keywords": [
    "color",
    "ral",
    "ai",
    "pytorch",
    "image-processing",
    "manufacturing"
  ],
  "author": "ColorWerkz Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "multer": "^1.4.5-lts.1",
    "express-rate-limit": "^7.1.5",
    "winston": "^3.11.0",
    "pg": "^8.11.3",
    "drizzle-orm": "^0.29.2",
    "onnxruntime-node": "^1.16.3",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@types/express": "^4.17.21",
    "@types/multer": "^1.4.11",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "@types/mocha": "^10.0.6",
    "@types/chai": "^4.3.11",
    "@types/supertest": "^6.0.2",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "mocha": "^10.2.0",
    "chai": "^5.0.0",
    "supertest": "^6.3.3",
    "nyc": "^15.1.0",
    "pm2": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0",
    "python": ">=3.9.0"
  }
}
